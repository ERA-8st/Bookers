<% if @book.errors.any? %>
	<p class="error">[error]can't be blank</p>
<% end %>
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<br>
	<%= f.submit "Update Book" %>
	<p>
		<%= link_to "Show", book_path %> | <%= link_to "Back", books_path %>
	</p>
<% end %>